<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ui.qrcode.QrcodeFragment">

    <Button
        android:id="@+id/btn_scan_barcode"
        android:layout_width="401dp"
        android:layout_height="44dp"
        android:text="Open camera"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <EditText
        android:id="@+id/et_qr_string"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="476dp"
        android:hint="Input the text"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_add_qrcode"
        android:layout_width="404dp"
        android:layout_height="57dp"
        android:text="Generate QRcode"
        app:layout_constraintBottom_toTopOf="@+id/iv_qr_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_qr_string" />

    <ImageView
        android:id="@+id/iv_qr_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_qrcode" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="117dp"
        android:layout_height="25dp"
        android:text="Scan resultï¼š"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_qr_string"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_scan_barcode" />

    <TextView
        android:id="@+id/tv_scan_result"
        android:layout_width="304dp"
        android:layout_height="25dp"
        android:layout_marginRight="4dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_qr_string"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_scan_barcode" />
</androidx.constraintlayout.widget.ConstraintLayout>
